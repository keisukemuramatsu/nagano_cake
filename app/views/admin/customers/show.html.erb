<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h4 class="col py-4"><span  class="bg-light">会員詳細</span></h4>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-borderless table-sm border-secondary">
          <tbody>
            <tr>
              <th  class="col-3">会員ID</th>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <th  class="col-3">氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th  class="col-3">フリガナ</th>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th  class="col-3">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th  class="col-3">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th  class="col-3">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th  class="col-3">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <th  class="col-3">会員ステータス</th>
              <td><%= @customer.is_deleted_i18n %></td>
            </tr>
            <tr>
              <th class="col-3"></th>
              <td>
                <div class='btn-toolbar' role="toolbar">
                  <div>
                    <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
                    <%= link_to "注文履歴", edit_admin_customer_path, class: "btn btn-primary" %>
                  </div>
                </div>
              </td>
            </tr>
        　</tbody>
        </table>
      </div>
    </div>
  </div>
</main>