 <main>
      <div class="container">
        <div class="row">
          <h4 class="col py-4"><span  class="bg-light">会員一覧</span></h4>
        </div>
        <table class="table table-sm border-secondary">
          <thead class="table-secondary">
            <tr>
              <th class="col-2 border-secondary">会員ID</th>
              <th class="col-4 border-secondary">名前</th>
              <th class="col-4 border-secondary">メールアドレス</th>
              <th class="col-2 border-secondary">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer.id), class:"text-dark" do %>
                    <%= customer.last_name %><%= customer.first_name %>
                  <% end %></td>
              <td><%= customer.email %></td>
              <td><%= customer.is_deleted_i18n %></td>
            </tr>
            <% end %>
        　</tbody>
        </table>
    　</div>
    </main>