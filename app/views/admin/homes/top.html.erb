<main>
      <div class="container">
        <div class="row-8">
          <h4 class="col py-4"><span  class="bg-light">注文履歴一覧</span></h4>
        <table class="table table-sm border-secondary">
          <thead class="table-secondary">
            <tr>
              <th class="col-2 border-secondary">購入日時</th>
              <th class="col-2 border-secondary">購入者</th>
              <th class="col-2 border-secondary">注文個数</th>
              <th class="col-2 border-secondary">注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_path(order.id), class: "text-reset" do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %></td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><% order.order_details.each do |order_detail| %>
                  <%= order_detail.amount %>
                <% end %></td>
              <td><%= order.status_i18n %></td>
              
            </tr>
            <% end %>
        　</tbody>
        </table>
    　</div>
    </main>