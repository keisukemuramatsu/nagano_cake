<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h4 class="col py-4"><span  class="bg-light">商品詳細</span></h4>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-12 py-3 text-center">
        <%= attachment_image_tag @item, :image, :fill, 200, 200 %>
        </div>
        <div class="col-md-8 col-sm-12 py-3 px-3">
        <table class="table table-sm border-secondary">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜価格)</td>
              <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><%= @item.is_active_i18n %></td>
            </tr>
            <tr>
              <td colspan="2" class="text-center"><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></td>
            </tr>
        　</tbody>
        </table>
        </div>
    </div>
  </div>
</main>