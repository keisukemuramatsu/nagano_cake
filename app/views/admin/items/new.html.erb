<main>
  <div class="container">
    <div class="row">
      <h4 class="col py-4"><span  class="bg-light">商品新規登録</span></h4>
    </div>
    <div class="row justify-content-center">
        <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
        <div class="form-group">
              <%= f.label :image ,"商品画像", class:"col-sm-8 col-form-label" %>
              <%= f.attachment_field :image, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :name,"商品名", class:"col-sm-8 col-form-label" %>
              <%= f.text_field :name, class:"col-sm-8 col-form-label" %>
            </div>
            <div class="form-group">
              <%= f.label :introduction,"商品説明", class:"col-sm-8 col-form-label" %>
              <%= f.text_area :introduction, class:"col-sm-8 col-form-label" %>
            </div>
            <div class="form-group">
              <%= f.label :genre,"ジャンル", class:"col-sm-8 col-form-label" %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name %>
            </div>
            <div class="form-group">
              <%= f.label :price,"税抜価格", class:"col-sm-8 col-form-label" %>
              <%= f.text_field :price, class:"col-sm-8 col-form-label" %>円
            </div>
            <%= f.collection_radio_buttons :is_active, Item.is_actives_i18n, :first , :last %>
            <div class="actions text-center">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
        <% end %>
    </div>
</main>