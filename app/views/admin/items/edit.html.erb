<main>
  <div class="container">
    <div class="row">
      <h4 class="col py-4"><span  class="bg-light">商品編集</span></h4>
    </div>
    <div class="row justify-content-center">
      <%= form_with model:@item, url:admin_item_path, local:true do |f| %>
        <table class="table table-md table-borderless">
          <tr class="form-group">
            <th><%= f.label :image ,"商品画像", class:"col-form-label" %></th>
              <td><%= f.attachment_field :image, class:"align-bottom" %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :name,"商品名", class:"pt-2 col-form-label" %></th>
              <td><%= f.text_field :name %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :introduction,"商品説明", class:"col-form-label" %></th>
              <td><%= f.text_area :introduction %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :genre,"ジャンル", class:"col-form-label" %></th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :name, class:"col-form-input"  %></td>
          </tr>
          <tr class="form-group">
              <th><%= f.label :price,"税抜価格", class:"col-form-label" %></th>
              <td><%= f.text_field :price, class:"col-form-input" %>円</td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :is_active,"販売ステータス", class:"form-check-label" %></th>
            <td><%= f.collection_radio_buttons :is_active, Item.is_actives_i18n, :first , :last, class:"form-check-input" %></td>
          </tr>
            <tr class="actions text-center">
              <th colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></th>
            </tr>
        <% end %>
        </table>
    </div>
</main>