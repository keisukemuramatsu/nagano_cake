<main>
<div class="container px-5 px-sm-0">
  <div class="row px-5">
    <div class="col-xl-3">
      <h4 class="mt-2">ジャンル編集</h4>
      <div class="form-inline">
        <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name,"ジャンル名", class: "control-label mt-3 mr-4" %>
          <%= f.text_field :name, class: "form-control book_title mt-3 mr-4" %>
          <%= f.submit "更新する", class: "btn btn-success mt-3 mr-3" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</main>