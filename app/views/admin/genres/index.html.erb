<main>
  <div class="container px-5 px-sm-0">
    <div class="row px-5">
      <div class="col-xl-3">
        <h4 class="mt-2">ジャンル一覧・追加</h4>
        <div class="form-inline">
          <%= form_with model:@newgenre, url:admin_genres_path, local:true do |f| %>
            <div class="form-group">
              <%= f.label :name,"ジャンル名", class: "control-label mt-3 mr-4" %>
              <%= f.text_field :name, class: "form-control genre_name mt-3 mr-4" %>
              <%= f.submit "新規登録", class: "btn btn-success mt-3 mr-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row px-5">
      <div class="col-8">
        <table class="table table-sm border-secondary">
          <thead class="table-secondary">
            <tr>
              <th class="col-3 border-secondary text-center">ジャンル</th>
              <th class="col-2 border-secondary"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"%></td>
              </tr>
            <% end %>
        　</tbody>
        </table>
    　</div>
  　</div>
　</div>
</main>