<main>
  <div class="container">
    <div class="row">
      <h4 class="col">会員情報編集</h4>
    </div>
    <div class="row justify-content-center">
      <table class="table table-sm table-borderless">
        <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <tr class="form-group">
            <th><%= f.label :name ,"名前", class:"col-sm-8 col-form-label" %></th>
            <td>(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %></td>
            <td>(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :name_kana ,"フリガナ", class:"col-sm-8 col-form-label" %></th>
            <td>(セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %></td>
            <td>(メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :email ,"メールアドレス", class:"col-sm-8 col-form-label" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :postal_code ,"郵便番号(ハイフンなし)", class:"col-sm-8 col-form-label" %></th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :address ,"住所", class:"col-sm-8 col-form-label" %></th>
            <td colspan="2"><%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th><%= f.label :telephone_number ,"電話番号(ハイフンなし)", class:"col-sm-8 col-form-label" %></th>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class:"form-control" %></td>
          </tr>
          <tr class="actions text-center">
            <th colspan="3"><%= f.submit "変更を保存", class: "btn btn-success w-25" %></th>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</main>