<main>
  <div class="container">
    <div class="row">
    <div class="col-12">
        <h2>商品一覧</h2>
        </div>
    <div class="row">
      <% @items.each do |item| %>
        <div class="col-md-3">
          <div class="card">
            <div class="card-body text-center">
              <%= link_to public_item_path(item.id) do %>
              <%= attachment_image_tag item, :image, :fill, 100, 100, class:"h-100 w-100" %>
              <% end %>
              <h5 class="card-title text-left pl-3">
                <%= item.name %><br>
                ￥<%= item.price %>
              </h5>
            </div>
          </div>
        </div>
      <%end%>
    </div>
      
    
    </div>
  </div>
</main>