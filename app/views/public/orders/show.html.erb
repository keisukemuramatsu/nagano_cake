<main>
  <div class="container">
      <div class="row">
        <h4 class="col py-4"><span  class="bg-light">注文履歴詳細</span></h4>
      </div>
      <div class="row">
          <div class="col-5">
              <p>注文情報</p>
              <table class="table table-bordered border-primary text-center">
           <tr>
            <th class="table-secondary col-4">注文日</th>
            <td>
              <%= @order.created_at.strftime("%Y/%m/%d") %>
            </td>
            </tr>
            <tr>
            <th class="table-secondary">配送先</th>
            <td><%= @order.address %><br><%= @order.name %></td>
            </tr>
            <tr>
            <th class="table-secondary">支払方法</th>
            <td>
              <%= @order.payment_method_i18n %>
            </td>
            </tr>
            <tr>
            <th class="table-secondary">ステータス</th>
            <td>
              <%= @order.status_i18n %>
            </td>
            </tr>
          </table>
          </div>
          <div class="col-3">
              <p>請求情報</p>
              <table class="table table-bordered border-primary text-center">
           <tr>
            <th class="table-secondary">商品合計</th>
            <td>
              <%= @sum.to_s(:delimited) %>
            </td>
            </tr>
            <tr>
            <th class="table-secondary col-5">配送料</th>
            <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
            <th class="table-secondary">ご請求額</th>
            <td>
              <%= @order.total_payment.to_s(:delimited) %>
            </td>
            </tr>
          </table>
          </div>
        
      </div>
      <table class="table table-bordered border-primary text-center col-8">
          <thead class="table-secondary">
            <tr>
              <th class="col-6 border-secondary">商品</th>
              <th class="col-2 border-secondary">単価(税込)</th>
              <th class="col-2 border-secondary">個数</th>
              <th class="col-2 border-secondary">小計</th>
            </tr>
          </thead>
          
          <tbody>
            <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.order_detail_sub_total %>円</td>
            </tr>
           <% end %>
        　</tbody>
        </table>
      <div class="row justify-content-center py-2">
        
      </div>
        
      </div>
  </div>　
</main>