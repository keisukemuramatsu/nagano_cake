<main>
      <div class="container">
        <div class="row">
          <h4 class="col py-4"><span  class="bg-light">注文履歴一覧</span></h4>
        <table class="table table-sm table-bordered">
          <thead class="table-secondary">
            <tr>
              <th class="col-2 border-secondary">注文日</th>
              <th class="col-3 border-secondary">配送先</th>
              <th class="col-2 border-secondary">注文商品</th>
              <th class="col-1 border-secondary">支払金額</th>
              <th class="col-2 border-secondary">ステータス</th>
              <th class="col-2 border-secondary">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y年%m月%d日") %></td>
              <td><%= order.address %><br><%= order.name %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <p><%= order_detail.item.name %></p>
                <% end %>
              </td>
              <td><%= order.total_payment %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "注文履歴", public_order_path(order.id), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        　</tbody>
        </table>
    　</div>
    </main>