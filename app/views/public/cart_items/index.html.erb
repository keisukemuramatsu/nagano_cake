<main>
      <div class="container">
        <div class="row">
          <h4 class="col py-4"><span  class="bg-light">商品一覧</span></h4>
          <h4 class="col py-4 text-right">
            <%= link_to "商品追加", new_admin_item_path %></h4>
        </div>
        <table class="table table-sm border-secondary">
          <thead class="table-secondary">
            <tr>
              <th class="col-2 border-secondary">商品名</th>
              <th class="col-3 border-secondary">単価</th>
              <th class="col-2 border-secondary">数量</th>
              <th class="col-3 border-secondary">小計</th>
              <th class="col-2 border-secondary"></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag @cart_item.image, :image, :fill, 300, 200 %><%= item.id %><%= cart_item[:name] %></td>
              <td></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name%></td>
              <td><%= item.is_active_i18n %></td>
            </tr>
            <% end %>
        　</tbody>
        </table>
    　</div>
    </main>