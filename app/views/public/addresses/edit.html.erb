<main>
  <div class="container">
    <div class="row">
      <h4 class="col">配送先編集</h4>
    </div>
    <div class="row">
      <table class="table table-sm table-borderless">
        <%= form_with model: @address, url: public_address_path,local: true do |f| %>
          <tr class="form-group">
            <th class="col-2"><%= f.label :postal_code ,"郵便番号(ハイフンなし)", class:"col-sm-12 col-form-label" %></th>
            <td class="col-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th class="col-2"><%= f.label :address ,"住所", class:"col-sm-12 col-form-label" %></th>
            <td  colspan="2",class="col-8"><%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %></td>
          </tr>
          <tr class="form-group">
            <th class="col-3"><%= f.label :name ,"宛名", class:"col-sm-12 col-form-label" %></th>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %></td>
            <td></td>
            <td><%= f.submit "変更内容を保存", class: "btn btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    </div>
  </div>
</main>