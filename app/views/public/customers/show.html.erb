<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h4 class="col py-4"><span  class="bg-light">マイページ</span></h4>
    </div>
    <div class="row">
        <tr>
            <th>登録情報</th>
            <td><%= link_to "編集する", edit_customer_registration_path, class: "btn btn-success" %></td>
        </tr>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-border table-sm border-dark">
          <tbody>
            <tr>
              <th  class="col-3">氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th  class="col-3">フリガナ</th>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th  class="col-3">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th  class="col-3">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th  class="col-3">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th  class="col-3">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <th class="col-3"></th>
              <td>
                <div class='btn-toolbar' role="toolbar">
                  <div>
                    <%= link_to "編集する", public_about_path, class: "btn btn-primary" %>
                    <%= link_to "注文履歴", public_about_path, class: "btn btn-primary" %>
                  </div>
                </div>
              </td>
            </tr>
        　</tbody>
        </table>
      </div>
    </div>
  </div>
</main>