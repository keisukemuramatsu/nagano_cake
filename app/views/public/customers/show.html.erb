<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <h4 class="col py-2">
        <span  class="bg-light">マイページ</span>
      </h4>
    </div>
    <div class="row">
      <div class="col-sm-2 d-flex justify-content-end align-items-center">
            <h4>
              <strong>登録情報</strong>
              </h4>
      </div>
      <div class="col-sm-2 d-flex align-items-center">
        <p><%= link_to "編集する", edit_customer_registration_path, class: "btn btn-success" %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-border table-sm border-dark">
          <tbody>
            <tr>
              <th  class="col-3">氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <th  class="col-3">フリガナ</th>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <th  class="col-3">郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <th  class="col-3">住所</th>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <th  class="col-3">電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <th  class="col-3">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 d-flex justify-content-end align-items-center">
        <h4>
          <strong>配送先</strong>
        </h4>
      </div>
      <div class="col-sm-2 d-flex align-items-center">
        <p><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2 d-flex justify-content-end align-items-center">
        <h4>
          <strong>注文履歴</strong>
        </h4>
      </div>
      <div class="col-sm-2 d-flex align-items-center">
        <p><%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %></p>
      </div>
    </div>
  </div>
</main>